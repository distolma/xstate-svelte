{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["es6", "dom"],
    "strictPropertyInitialization": true,
    "importHelpers": true
  },
  "include": ["src/**/*"],
}
